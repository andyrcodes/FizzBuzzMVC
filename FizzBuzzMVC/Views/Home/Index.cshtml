@model FizzBuzzMVC.Models.FBModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col">
            <form method="post">
                <div class="form-group">
                    <label asp-for="FizzNum"></label>
                    <input class="form-control" asp-for="FizzNum" value=3 type="number"/>
                    <label asp-for="BuzzNum"></label>
                    <input class="form-control" asp-for="BuzzNum" value=5 type="number"/>
                </div>
                <div class="form-group">
                    <label asp-for="StartNum"></label>
                    <input class="form-control" asp-for="StartNum" value=1 type="number"/>
                    <label asp-for="EndNum"></label>
                    <input class="form-control" asp-for="EndNum" value=100 type="number"/>
                </div>
                <div class="form-group">
                    <input class="form-control btn btn-success" asp-for="StartNum" type="submit" value="Fizz That Buzz" />
                </div>
            </form>
        </div>
        <div class="col">
            <h3>There is a built in issue with this code. If the output does not result in a multiple of 5 the table will break</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Results.Count; i += 5)
                    {
                        <tr>
                            <td>@Model.Results[i]</td>
                            <td>@Model.Results[i + 1]</td>
                            <td>@Model.Results[i + 2]</td>
                            <td>@Model.Results[i + 3]</td>
                            <td>@Model.Results[i + 4]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
