@model FizzBuzzMVC.Models.FBModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col">
            <form method="post">
                <div class="form-group">
                    <input class="form-control" asp-for="FizzNum" />
                    <input class="form-control" asp-for="BuzzNum" />
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="StartNum" />
                    <input class="form-control" asp-for="EndNum" />
                </div>
                <div class="form-group">
                    <input class="form-control btn btn-success" asp-for="StartNum" type="submit" value="Fizz That Buzz" />
                </div>
            </form>
        </div>
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Results.Count; i += 5)
                    {
                        <tr>
                            <td>@Model.Results[i]</td>
                            <td>@Model.Results[i + 1]</td>
                            <td>@Model.Results[i + 2]</td>
                            <td>@Model.Results[i + 3]</td>
                            <td>@Model.Results[i + 4]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
